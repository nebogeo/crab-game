       "I give up"
       (- screen-width 150)
       (- screen-height 150)
       #f
       (find-image "quit.png")
       (lambda (c)
         (nightjar-fail
          (nightjar-example-desc example)
          (string-append
           "You couldn't find this "
           (nightjar-example-desc example)
           " nest - you'll go hungry tonight!")
          c)))

